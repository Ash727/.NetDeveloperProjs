@page "/People"
<h3>PeopleEntry</h3>
<EditForm Model="model" OnValidSubmit="ValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <InputText @bind-Value ="model.FirstName" placeholder="FirstName" class="form-control"/>
    <InputText @bind-Value ="model.LastName" placeholder="LastName"class="form-control"/>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>

<h3>@Title</h3>
<ul class="form-control">
    @foreach (var person in people)
    {
        <li class="form-control">@person.FirstName @person.LastName</li>
    }
</ul>

@code {
    private string Title { get; set; } = "List of People";
    private PersonModel model = new PersonModel();
    List<PersonModel> people = new List<PersonModel>();
    // Acts like a //POST : Event 
    private void ValidSubmit()
    {
        people.Add(model);
        model = new PersonModel();
    }
}
